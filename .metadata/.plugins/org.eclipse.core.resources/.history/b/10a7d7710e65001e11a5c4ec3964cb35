body{

  background: linear-gradient(90deg, #EEE8AA 60%,#778899 40.1%);

}
table {
    width: 100%;
    border-collapse: collapse;
    border-spacing: 0;
    margin-bottom: 20px; /* Add some spacing between tables */
}

/* Style table headers */
th {
    background-color: #f2f2f2; /* Background color for header row */
    text-align: left;
    padding: 10px;
    border-top: 1px solid #ccc; /* Add top border */
    border-bottom: 1px solid #ccc; /* Add bottom border */
}

/* Style table rows */
tr {
    background-color: #fff; /* Background color for odd rows */
}

/* Style even rows differently for better readability */
tr:nth-child(even) {
    background-color: #f2f2f2;
}

/* Style table cells */
td {
    padding: 8px;
    border-bottom: 1px solid #ccc; /* Add bottom border to cells */
}

/* Hover effect for table rows */
tr:hover {
    background-color: #ddd; /* Background color on hover */
}
